{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "types": ["@webgpu/types"],
    "outDir": "dist",
    "rootDir": "src"
  },
  "include": ["src"]
}
